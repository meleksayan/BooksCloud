<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#A5D6A7">

    <ImageView
        android:id="@+id/book_cover"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/sekerportakali"/>

    <TextView
        android:id="@+id/book_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Seker Portakalı"
        android:textStyle="bold|italic"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/book_cover"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/author_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Vascencelos"
        android:textStyle="bold|italic"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/book_cover"
        app:layout_constraintTop_toBottomOf="@+id/book_name" />

    <TextView
        android:id="@+id/book_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="65 ₺"
        android:textStyle="bold|italic"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/book_cover"
        app:layout_constraintTop_toBottomOf="@+id/author_name"/>

    <ImageView
        android:id="@+id/addfavorite"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/baseline_favorite_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/book_price" />

    <ImageView
        android:id="@+id/addcart"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/baseline_add_shopping_cart_24"
        app:layout_constraintEnd_toStartOf="@id/addfavorite"
        app:layout_constraintTop_toBottomOf="@id/book_price"/>

    <EditText
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/book_cover"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Jose Mauro de Vasconcelos'un başyapıtı Şeker Portakalı,günün birinde acıyı
keşfeden küçük bir çocuğun öyküsüdür.Çok yoksul bir ailenin oğlu olarak dünyaya gelen,
dokuz yaşında yüzme öğrenirken bir gün yüzme şampiyonu olmanın hayalini kuran
Vasconcelos'un çocukluğundan derin izler taşıyan Şeker Portakalı, yaşamın beklenmedik değişimleri karşısında
 büyük sarsıntılar yaşayan küçük Zeze'nin başından geçenleri anlatır.
 Vasconcelos, tam on iki günde yazdığı bu romanı yirmi yıldan fazla bir zaman yüreğinde taşıdığını söyler." />


</androidx.constraintlayout.widget.ConstraintLayout>